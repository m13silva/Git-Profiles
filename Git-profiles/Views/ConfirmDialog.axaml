<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Git_profiles.Views"
        x:Class="Git_profiles.Views.ConfirmDialog"
        x:DataType="views:ConfirmDialog"
        Width="400" Height="150"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
    
    <DockPanel Margin="20">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Accept" Click="OnOkClick" />
            <Button Content="Cancel" Click="OnCancelClick" />
        </StackPanel>

        <TextBlock Text="{CompiledBinding Message}" TextWrapping="Wrap" VerticalAlignment="Center"/>
    </DockPanel>
</Window>